<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FFE1"
    tools:context=".DetailRekamMedisDokterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetailRekMedis"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_main"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDetailRekMedis"
        android:layout_below="@id/toolbarDetailRekMedis"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/color_main">

        <TextView
            android:id="@+id/nama_pasien"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pasien"/>

        <TableRow
            android:layout_marginTop="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_idRekMedis"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Rekam Medis :"/>

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/idRekMedis"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor ID"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_idPasien"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Pasien :"/>

            <TextView
                android:layout_marginLeft="70dp"
                android:id="@+id/idPasien"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor ID"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="135dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_idDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Dokter :"/>

            <TextView
                android:layout_marginLeft="70dp"
                android:id="@+id/alamatDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor ID"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="170dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_anastesa"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anastesa :"/>

            <TextView
                android:layout_marginLeft="45dp"
                android:id="@+id/anastesa"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anastesa"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="205dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_diagnosa"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diagnosa :"/>

            <TextView
                android:layout_marginLeft="70dp"
                android:id="@+id/diagnosa"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Penyakit"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="240dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_terapi"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terapi :"/>

            <TextView
                android:layout_marginLeft="100dp"
                android:id="@+id/terapi"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Terapi"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="275dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_resep"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resep :"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/resep"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Resep"
                android:maxLines="2"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="310dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_tglresep"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Dibuat :"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tglResep"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD/MM/YY"/>

        </TableRow>

    </androidx.cardview.widget.CardView>

    <TableRow
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/cvDetailRekMedis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/hapusDtlRekMedis"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="10dp"
            android:text="Hapus"
            android:background="@drawable/btn_shape_orange"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/editDtlRekMedis"
            android:clickable="true"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:paddingLeft="16dp"
            android:layout_marginLeft="8dp"
            android:paddingRight="16dp"
            android:layout_marginTop="10dp"
            android:text="Edit"
            android:background="@drawable/btn_shape_green"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </TableRow>

</RelativeLayout>