<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FFE1"
    tools:context=".EditJadwalActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txt_hariPraktek"
        android:textColor="@android:color/black"
        android:text="Hari :"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/hariPraktek"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/txt_hariPraktek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Hari Dokter Praktek"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txt_keterangan"
        android:textColor="@android:color/black"
        android:layout_below="@id/hariPraktek"
        android:text="Keterangan :"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/keterangan"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/txt_keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Keterangan"/>

    <RelativeLayout
        android:id="@+id/relayBtn"
        android:gravity="center"
        android:layout_below="@id/keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:clickable="true"
            android:id="@+id/tambahJadwal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:background="@drawable/btn_shape_green"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="20dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</RelativeLayout>