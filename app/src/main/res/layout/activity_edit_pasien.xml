<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FFE1"
    tools:context=".EditPasienActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/txt_noKtp"
                android:textColor="@android:color/black"
                android:text="Nomor KTP :"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/editKtpPasien"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/txt_noKtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_namaPasien"
                android:textColor="@android:color/black"
                android:layout_below="@id/editKtpPasien"
                android:text="Nama Pasien :"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/editNamaPasien"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/txt_namaPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_account"
                android:drawablePadding="8dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_alamatPasien"
                android:textColor="@android:color/black"
                android:layout_below="@id/editNamaPasien"
                android:text="Alamat :"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtAlamatPasien"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/txt_alamatPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="10dp"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/txt_jenkel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtAlamatPasien"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Jenis Kelamin :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/edtSpinnerJenkel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_jenkel"
                android:layout_marginTop="4dp"
                android:entries="@array/kelamin"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_umur"
                android:textColor="@android:color/black"
                android:layout_below="@id/edtSpinnerJenkel"
                android:text="Umur :"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtUmur"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/txt_umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtUmur"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Status :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/edtSpinnerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_status"
                android:layout_marginTop="4dp"
                android:entries="@array/status_kawin"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_telpPasien"
                android:textColor="@android:color/black"
                android:layout_below="@id/edtSpinnerStatus"
                android:text="No. Telp :"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtTelpPasien"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/txt_telpPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="8dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_namaIbu"
                android:textColor="@android:color/black"
                android:layout_below="@id/edtTelpPasien"
                android:text="Nama Ibu :"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtIbuPasien"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/txt_namaIbu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_family"
                android:drawablePadding="8dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/txt_namaPasangan"
                android:textColor="@android:color/black"
                android:layout_below="@id/edtIbuPasien"
                android:text="Nama Pasangan :"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtPasanganPasien"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_below="@id/txt_namaPasangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_family"
                android:drawablePadding="8dp"/>

            <RelativeLayout
                android:id="@+id/relayBtn"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/edtPasanganPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:clickable="true"
                    android:id="@+id/editDataPasien"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_shape_green"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="20dp"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>