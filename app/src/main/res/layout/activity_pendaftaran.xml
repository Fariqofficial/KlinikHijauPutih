<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FFE1"
    tools:context=".PendaftaranActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPendaftaran"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_main"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/pendaftaranDokter"
        android:clickable="true"
        android:backgroundTint="@color/color_main"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/toolbarPendaftaran"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Pendaftaran Dokter"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/pendaftaranPasien"
        android:clickable="true"
        android:backgroundTint="@color/color_main"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/pendaftaranDokter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Pendaftaran Pasien"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pendaftaranJadwal"
        android:clickable="true"
        android:backgroundTint="@color/color_main"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/pendaftaranDokter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Pendaftaran Jadwal Dokter"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>


</RelativeLayout>