<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FFE1"
    tools:context=".DetailDokterActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDetailDokter"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/color_main">

        <TextView
            android:id="@+id/nama_dokter"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Dokter"/>


        <RelativeLayout
            android:layout_marginTop="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_noKtp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. KTP :"/>

            <TextView
                android:layout_toRightOf="@id/txt_noKtp"
                android:layout_marginLeft="15dp"
                android:id="@+id/nomorKTPDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor KTP"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_alamat"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat :"/>

            <TextView
                android:layout_toRightOf="@id/txt_alamat"
                android:layout_marginLeft="22dp"
                android:id="@+id/alamatDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Alamat"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="135dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_telpDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Telp :"/>

            <TextView
                android:layout_marginLeft="14dp"
                android:id="@+id/telpDokter"
                android:layout_toRightOf="@id/txt_telpDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Telp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="170dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_poliDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poli :"/>

            <TextView
                android:layout_toRightOf="@id/txt_poliDokter"
                android:layout_marginLeft="55dp"
                android:id="@+id/poliDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Poli"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="205dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_emailDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"/>

            <TextView
                android:layout_toRightOf="@id/txt_emailDokter"
                android:layout_marginLeft="8dp"
                android:id="@+id/emailDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Email"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="240dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_jadwal"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal :"/>

            <TextView
                android:layout_toRightOf="@id/txt_jadwal"
                android:layout_marginLeft="20dp"
                android:id="@+id/hariPraktek"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Hari"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:layout_below="@id/cvDetailDokter"
        android:id="@+id/editJadwalDokter"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Perbarui Jadwal Dokter"
        android:layout_margin="8dp"
        android:background="@drawable/btn_shape_green"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/editJadwalDokter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <Button
            android:id="@+id/hapusDtlDokter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:text="Hapus"
            android:background="@drawable/btn_shape_hapus"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/editDtlDokter"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit"
            android:layout_marginLeft="4dp"
            android:background="@drawable/btn_shape_green"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>