<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FFE1"
    tools:context=".DetailDokterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetailDokter"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_main"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDetailDokter"
        android:layout_below="@id/toolbarDetailDokter"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/color_main">

        <TextView
            android:id="@+id/nama_dokter"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Dokter"/>

        <TableRow
            android:layout_marginTop="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_idDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Dokter :"/>

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/id_dokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor ID"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_noKtp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. KTP :"/>

            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/nomorKTPDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor KTP"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="135dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_alamat"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat :"/>

            <TextView
                android:layout_marginLeft="24dp"
                android:id="@+id/alamatDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Alamat"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="170dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_telpPasien"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Telp :"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/telpDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Telp"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="205dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_poliDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poli :"/>

            <TextView
                android:layout_marginLeft="55dp"
                android:id="@+id/poliDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Poli"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="240dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_usernameDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username :"/>

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/usernameDokter"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="275dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_jadwal"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal :"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/hariPraktek"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Hari"/>

        </TableRow>

        <TableRow
            android:layout_marginTop="310dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/txt_staff"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Staff :"/>

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/namaStaff"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff"/>

        </TableRow>

    </androidx.cardview.widget.CardView>

    <TableRow
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/cvDetailDokter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/hapusDtlDokter"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="10dp"
            android:text="Hapus"
            android:background="@drawable/btn_shape_hapus"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/editDtlDokter"
            android:clickable="true"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:paddingLeft="16dp"
            android:layout_marginLeft="8dp"
            android:paddingRight="16dp"
            android:layout_marginTop="10dp"
            android:text="Edit"
            android:background="@drawable/btn_shape_green"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </TableRow>

</RelativeLayout>