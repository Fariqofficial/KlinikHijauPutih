<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FFE1"
    android:id="@+id/drawerLayout"
    tools:context=".HomeActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewStaff"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/color_main">

                    <TextView
                        android:id="@+id/txt_selamat_dtg"
                        android:layout_marginTop="15dp"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selamat Datang!"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/namaStaff"
                        android:layout_marginTop="65dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Staff :"/>

                    <TextView
                        android:layout_marginLeft="125dp"
                        android:id="@+id/Staff"
                        android:layout_marginTop="65dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Staff"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/idStaff"
                        android:layout_marginTop="100dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Staff :"/>


                    <TextView
                        android:layout_marginLeft="85dp"
                        android:id="@+id/nomorId"
                        android:layout_marginTop="100dp"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor ID"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <com.google.android.material.navigation.NavigationView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:menu="@menu/nav_menu"
                android:layout_gravity="start">

            </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>