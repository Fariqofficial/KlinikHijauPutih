<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FFE1"
    tools:context=".DaftarPasienActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_noKtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:text="Nomor KTP :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/no_KtpPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_noKtp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_ktp"
                android:drawablePadding="15dp"
                android:hint="Masukan No KTP"
                android:inputType="number" />

            <TextView
                android:id="@+id/txt_namaPasien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/no_KtpPasien"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Nama Pasien :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/namaPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_namaPasien"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_account"
                android:drawablePadding="5dp"
                android:hint="Masukan Nama Pasien"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txt_alamatPasien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaPasien"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Alamat :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/alamatPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_alamatPasien"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="10dp"
                android:hint="Masukan Alamat"
                android:inputType="textPostalAddress"
                android:maxLines="2" />

            <TextView
                android:id="@+id/txt_jenkel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alamatPasien"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Jenis Kelamin :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinnerJenkel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_jenkel"
                android:layout_marginTop="4dp"
                android:entries="@array/kelamin"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/txt_umur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinnerJenkel"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Umur :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_umur"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:hint="...."
                android:inputType="number" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/umur"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Status :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_status"
                android:layout_marginTop="4dp"
                android:entries="@array/status_kawin"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/txt_telpPasien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinnerStatus"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="No. Telp :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/telpPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_telpPasien"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:hint="Masukan No. Telp"
                android:inputType="number" />

            <TextView
                android:id="@+id/txt_namaIbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/telpPasien"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Nama Ibu :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ibuPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_namaIbu"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_family"
                android:drawablePadding="8dp"
                android:hint="Masukan Nama Ibu"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txt_namaPasangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ibuPasien"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Nama Pasangan :"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/pasanganPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_namaPasangan"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_family"
                android:drawablePadding="8dp"
                android:hint="Jika Tidak Ada Boleh Diisi '-' "
                android:inputType="textPersonName" />

            <RelativeLayout
                android:id="@+id/relayBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pasanganPasien"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <Button
                    android:id="@+id/daftarPasien"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_shape_green"
                    android:clickable="true"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Daftar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>